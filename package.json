{
  "name": "js-to-sh",
  "description": "Turn javascript code into shellscript",
  "version": "1.1.9",
  "main": "dist/cjs/index.js",
  "module": "dist/mjs/index.js",
  "types": "dist/types/index.d.ts",
  "typings": "dist/types/index.d.ts",
  "type": "module",
  "bin": {
    "tjss": "dist/cjs/index.js",
    "transpiler-js-shell": "dist/cjs/index.js",
    "js-to-sh": "dist/cjs/index.js"
  },
  "typesVersions": {
    "*": {
      ".": [
        "./dist/types/index.d.ts"
      ],
      "globals": [
        "./dist/types/index.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/mjs/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./globals": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.d.ts",
      "require": "./dist/types/index.d.js"
    },
    "./loader": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/mjs/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "cli": "bun src/cli.ts",
    "test": "tsx test/app.ts && chmod 777 output/*",
    "build": "rimraf dist && npm run build:tsup && npm run build:dts && ./fixup.sh && cp -R src/transformers/shellscript dist/transformers",
    "build:tsup": "bun build/build.ts",
    "build:dts": "mkdir dist/types && ./node_modules/.bin/dts-bundle-generator -o dist/types/index.d.ts --verbose --no-check --sort --external-imports=meriyah --external-types=meriyah --external-inlines=meriyah -- src/index.ts",
    "lint": "eslint -c eslint.config.js"
  },
  "keywords": [
    "transpiler",
    "javascript",
    "transpiler-js",
    "transpilers",
    "builder",
    "shellscript",
    "js-to-sh",
    "ast",
    "abstract-syntax-tree"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ashu11-A/Transpiler-JS-Shell.git"
  },
  "author": "Ashu11A",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Ashu11-A/Transpiler-JS-Shell/issues"
  },
  "homepage": "https://github.com/Ashu11-A/Transpiler-JS-Shell",
  "dependencies": {
    "@loggings/beta": "^2.3.0",
    "abstract-syntax-tree": "^2.22.0",
    "glob": "^11.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/node": "^22.7.4",
    "chokidar": "^4.0.1",
    "dts-bundle-generator": "^9.5.1",
    "eslint": "^9.11.1",
    "globals": "^15.9.0",
    "meriyah": "^5.0.0",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.10",
    "tsup": "^8.3.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.7.0"
  }
}
